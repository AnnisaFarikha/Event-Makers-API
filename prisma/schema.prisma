generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

enum EventStatus {
  UPCOMING
  ONGOING
  COMPLETED
  CANCELLED
}

enum EventCategory {
  SEMINAR
  WORKSHOP
  CONFERENCE
  MEETUP
}

enum EventType {
  ONLINE
  OFFLINE
  HYBRID
}

model Event {
  id           String        @id @default(cuid())
  name         String
  description  String
  location     String
  dateTime     String
  endDateTime  String?
  status       EventStatus    @default(UPCOMING)
  category     EventCategory  @default(SEMINAR)
  type         EventType      @default(OFFLINE)
  participants Participant[]
}

model Participant {
  id      String @id @default(cuid())
  name    String
  email   String @unique
  eventId String
  event   Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)
}